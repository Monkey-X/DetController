<resources>
    <style name="empty_img">
        <item name="android:layout_width">@dimen/def_height</item>
        <item name="android:layout_height">@dimen/def_height</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>


    <style name="activity_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


    <style name="Widget.Connect" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="HeaderShadow">
        <item name="android:foreground">@drawable/action_bar_shadow</item>
        <item name="foreground">@drawable/action_bar_shadow</item>
    </style>

    <style name="style_common_text">
        <item name="android:text">@string/str_name</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_button_normal_big" parent="style_common_text">
        <item name="android:layout_width">@dimen/dp_196</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:text">@string/str_has_selected</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_normal_button_view_big</item>
    </style>

    <style name="style_button_warning_big" parent="style_common_text">
        <item name="android:layout_width">@dimen/dp_196</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:text">@string/str_has_selected</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_warning_button_view_big</item>
    </style>

    <style name="style_home_text_view" parent="style_common_text">
        <item name="android:layout_width">@dimen/dp_96</item>
        <item name="android:layout_height">@dimen/dp_28</item>
        <item name="android:text">@string/str_has_selected</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_normal_button_view</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>


</resources>
