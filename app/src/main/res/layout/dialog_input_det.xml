<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#66CCFF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_pro_height"

        android:background="@drawable/message_item_auto"
        android:clickable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/det_code"
            android:layout_width="100dp"
            android:layout_height="@dimen/activity_detail_content_height"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:text="雷管编码: " />

        <com.etek.controller.widget.ClearableEditText
            android:id="@+id/et_det_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="105dp"
            android:textColor="@color/eighty_per_trans_black"
            android:background="@null"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66CCFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_pro_height"
        android:background="@drawable/message_item_auto"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pro_name_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="雷管数量: " />

        <EditText
            android:id="@+id/et_det_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="3"
            android:gravity="center"
            android:text="1"
            android:inputType="number"
            android:textColor="@color/eighty_per_trans_black"
            android:textSize="15sp" />



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66CCFF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_pro_height"
        android:background="@drawable/message_item_auto"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_det_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="递增类型: " />

        <Spinner
            android:id="@+id/sp_det_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="105dp"
            android:entries="@array/det_type"
            android:scrollbars="vertical"
            android:textColor="@color/eighty_per_trans_black"
            android:textSize="15sp" />

    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#66CCFF" />


</LinearLayout>



