<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rl_contract_code"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:digits="1234567890"
                    android:text="合同编号！" />

<!--                <Button-->
<!--                    android:id="@+id/is_select"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="@dimen/dp_24"-->
<!--                    android:layout_alignParentEnd="true"-->
<!--                    android:background="@color/red_normal"-->
<!--                    android:clickable="false"-->
<!--                    android:text="检查中"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="@dimen/sp_16"-->

<!--                    />-->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rl_contract_name"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_sn_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="合同ID和名字" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="20"
                    android:singleLine="true"
                    android:text="公司ID和名字" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_toStartOf="@id/det_size"
                    android:layout_toLeftOf="@id/det_size"
                    android:text="@string/det_countName" />

                <TextView
                    android:id="@+id/det_size"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:text="3"
                    android:gravity="end"
                    android:textColor="@color/dark_orange"
                    android:textStyle="bold" />
            </RelativeLayout>


        </LinearLayout>



</android.support.v7.widget.CardView>

