<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.project.ConnectTestActivity">

    <include layout="@layout/actionbar_custom_view" />



    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/seleted_status"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/serial_number"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/btn_gray_normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="@string/tube_code"
            android:textStyle="bold"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/btn_gray_normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/hole_location"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/btn_gray_normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="状态"
            android:textSize="16sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:layout_below="@+id/title"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/layout_test_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/normal">

        <LinearLayout
            android:id="@+id/progress_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/cancel_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:background="@drawable/seleted_status"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:text="取消" />

        </LinearLayout>

        <TextView
            android:id="@+id/startTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/seleted_status"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="开 始 检 测" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/all_det"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/seleted_status"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:text="全部"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/miss_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/seleted_status"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="失联"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/false_connect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:background="@drawable/seleted_status"
            android:textStyle="bold"
            android:text="误接"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>