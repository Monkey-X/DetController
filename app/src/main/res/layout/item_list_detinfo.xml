<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


            <TextView
                android:id="@+id/det_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:text="1"
                android:textSize="@dimen/det_index_size"
                android:textColor="@color/green"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/det_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="起爆器:F380000189"/>
                    <TextView
                        android:id="@+id/det_count_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/det_count"
                        android:layout_toStartOf="@id/det_count"
                        android:layout_marginRight="@dimen/dp_12"
                        android:text="@string/det_countName"/>

                    <TextView
                        android:id="@+id/det_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/det_text_big_size"
                        android:layout_marginRight="@dimen/dp_12"
                        android:textStyle="bold"
                        android:text="3"/>

                </RelativeLayout>

                    <TextView
                        android:id="@+id/det_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:text="时间"/>



                    <TextView
                        android:id="@+id/det_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:singleLine="true"
                        android:maxEms="20"
                        android:ellipsize="end"
                        android:text="地址"/>


            </LinearLayout>



</LinearLayout>

