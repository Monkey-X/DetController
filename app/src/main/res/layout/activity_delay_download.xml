<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DelayDownloadActivity">

    <include layout="@layout/actionbar_custom_view" />


    <include layout="@layout/project_delay_download_item" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/delayList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/btn_gray_normal" />


    <TextView
        android:id="@+id/project_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/seleted_status"
        android:gravity="center"
        android:padding="8dp"
        android:text="保 存"
        android:textStyle="bold" />

</LinearLayout>